---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a
          href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
          target="_blank"
          rel="noopener noreferrer"
          class="float-right"
        >
          <i class="fa-solid fa-file-pdf"></i>
        </a>
      {% endif %}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    {% if site.tabout_cv and page.cv_pdf %}
      <!-- Tabbing out to open the CV PDF -->
      <div class="cv">
        <p>
          <a
            href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary"
          >
            Open CV in PDF
          </a>
        </p>
      </div>
    {% elsif site.embed_cv and page.cv_pdf %}
      <!-- Embedding the CV -->
      <div class="cv">
        <iframe
          src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
          width="100%"
          height="800px"
          style="border: none;"
        >
          This browser does not support PDFs. Please download the PDF to view it:
          <a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"> Download PDF </a>
        </iframe>
      </div>
    {% else %}
      <!-- Displaying CV content dynamically -->
      <div class="cv">
        {% if site.data.cv %}
          {% for entry in site.data.cv %}
            <a class="anchor" id="{{ entry.title }}"></a>
            <div class="card mt-3 p-3">
              <h3 class="card-title font-weight-medium">{{ entry.title }}</h3>
              <div>
                {% case entry.type %}
                  {% when 'list' %}
                    {% include cv/list.liquid %}
                  {% when 'map' %}
                    {% include cv/map.liquid %}
                  {% when 'nested_list' %}
                    {% include cv/nested_list.liquid %}
                  {% when 'time_table' %}
                    {% include cv/time_table.liquid %}
                  {% when 'list_groups' %}
                    {% include cv/list_groups.liquid %}
                  {% else %}
                    {{ entry.contents }}
                {% endcase %}
              </div>
            </div>
          {% endfor %}
        {% else %}
          <p>No CV data available. Please configure `site.data.cv` in your Jekyll data files.</p>
        {% endif %}
      </div>
    {% endif %}
  </article>
</div>
